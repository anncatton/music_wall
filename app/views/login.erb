<% if @user.errors.any? %>
  <p>Uh oh! Looks like there's some errors to fix before you can login:</p>
  <% @user.errors.full_messages.each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<form method="post" action="/login">
<p><%= @error.to_s %></p>
  <div>
    <label>Username:</label>
    <input type="text" name="name" placeholder="enter your name" value="<%= @user.name %>" />
  </div>

  <div>
    <label>Email:</label>
    <input type="text" name="email" placeholder="enter your email" value="<%= @user.email %>" />
  </div>

  <div>
    <label>Password:</label>
    <input type="password" name="password" placeholder="enter your password" value="<%= @user.password %>" />
  </div>

  <div>
    <input type="submit" value="Submit" />
  </div>

</form>