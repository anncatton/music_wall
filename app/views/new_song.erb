<% if @song.errors.any? %>
  <p>Uh oh! Looks like there's some errors to fix before this song can be posted:</p>
  <% @song.errors.full_messages.each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<form method="post" action="/new_song">
  <div>
    <label>Author:</label>
    <input type="text" name="author" value="<%= @song.author %>" />
  </div>

  <div>
    <label>Title:</label>
    <input type="text" name="title" value="<%= @song.title %>" />
  </div>

  <div>
    <label>URL:</label>
    <input type="text" name="url" value="<%= @song.url %>" />
  </div>

  <div>
    <input type="submit" value="Submit" />
  </div>

</form>

<p>
  <a href="/">Back to Song List</a>
</p>